<section id="Content">
    <div class="holder">
        <div class="mainContent">
            <!-- Question Start -->
            <div class="question">
                <div class="form-inline" onclick="checkMic()">
                    <input type="text" id="txtSearch" name="txtSearch" class="form-control" speech x-webkit-speech />
                    <i class="mic normal mic-off" aria-hidden="true" id="mic">Please Ask a Question</i>
                </div>
            </div>
            <!-- Question End -->
            <!-- Answer section Start -->
            <div class="answer">
                <div class="answerBlock">
                    <div class="answerHead">Answer</div>
                    <div class="answerOneLiner" id="divAnswer"></div>
                    <div class="answerDetailed">
                    </div>
                </div>
            </div>
            <!-- Answer section End -->

        </div>

        <!-- Log -->
        <div class="log">
            <h2>Log</h2>
            <pre id="log"></pre>
        </div>

        <ul id="recordingslist"></ul>
    </div>
</section>